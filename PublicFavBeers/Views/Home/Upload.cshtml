@model ImageViewModel
    <div class="container border border-3">
    <form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
        <div class="form-group m-3">
            <label asp-for="@Model.Name" class="control-label"></label>
            <input type="text" asp-for="@Model.Name" />
        </div>
        <div class="form-group m-3">
            <label asp-for="@Model.Data"  class="control-label"></label>
            <input type="file" asp-for="@Model.Data" />
        </div>
        <div class="form-group m-3">
            <label asp-for="@Model.BreweryName" class="control-label">Brewery Name</label>
            <input type="text" asp-for="@Model.BreweryName" />
        </div>
        <div class="form-group m-3">
            <label asp-for="@Model.Description" class="control-label">Description</label>
            <input type="text" asp-for="@Model.Description" />
        </div>
        <div><input asp-for="id" type="hidden" value="@Model.id" /></div>
        <div class="form-group m-3">
            <input type="submit" value="Upload!" class="btn btn-primary" />
        </div>
    </form>
</div>