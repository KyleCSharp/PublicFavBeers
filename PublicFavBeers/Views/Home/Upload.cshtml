@model ImageViewModel
<div class="Background"></div>
<div class="container">
    <form id="myForm" asp-controller="Home" asp-action="Upload" method="POST" enctype="multipart/form-data">
        <div class="form-group m-3">
            <label asp-for="@Model.Name" class="control-label">Name:</label>
            <input type="text" asp-for="@Model.Name" id="name" name="name" />
        </div>
        <div class="form-group m-3">
            <label asp-for="@Model.Data" class="control-label">Data:</label>
            <input type="file" asp-for="@Model.Data" id="data" name="data" />
        </div>
        <div class="form-group m-3">
            <label asp-for="@Model.BreweryName" class="control-label">Brewery Name:</label>
            <input type="text" asp-for="@Model.BreweryName" id="breweryName" name="breweryName" />
        </div>
        <div class="form-group m-3">
            <label asp-for="@Model.Description" class="control-label">Description:</label>
            <input type="text" asp-for="@Model.Description" id="description" name="description" />
        </div>
        <div>
            <input asp-for="id" type="hidden" value="@Model.id" />
        </div>
        <div class="form-group m-3">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" />
        </div>
        <div class="form-group m-3">
            <button id="submit" class="btn btn-primary" disabled>Upload!</button>
        </div>
    </form>
</div>

<script>
    
    const passwordInput = document.getElementById('password');
    const submitButton = document.getElementById('submit');
    const correctPassword = 'password123'; // this will be changed after git push

    function checkPassword() {
        if (passwordInput.value === correctPassword) {
            submitButton.disabled = false;
        } else {
            submitButton.disabled = true;
        }
    }

    passwordInput.addEventListener('input', checkPassword);
</script>
